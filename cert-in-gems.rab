= ActiveMerchant
 # enscript ruby
 module ActiveMerchant
   class Connection
     def configure_ssl(http)
       return unless endpoint.scheme == "https"
 
       http.use_ssl = true
 
       if verify_peer
         http.verify_mode = OpenSSL::SSL::VERIFY_PEER
         http.ca_file     = File.dirname(__FILE__) + \
           '/../../certs/cacert.pem'
       else
         http.verify_mode = OpenSSL::SSL::VERIFY_NONE
       end
     end
   end
 end

